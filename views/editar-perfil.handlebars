<main class="contenedor">
    <form action="/editar-perfil" method="post" enctype="multipart/form-data" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input value={{usuario.nombre}} type="text" name="nombre" placeholder="Tu Nombre" required>
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input value={{usuario.email}} type="email" name="email" placeholder="Tu E-Mail" required>
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div> 
    </form>
</main>